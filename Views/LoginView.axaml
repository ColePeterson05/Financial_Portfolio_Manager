<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Financial_Portfolio_Manager.Views.LoginView">
    <DockPanel>
        <!--- TOP -->
        <TextBlock
            Text = "Login" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Center"
                Margin="0, 10, 0, 20"
                FontSize="26" FontWeight="Medium" />
        
        <!--- Bottom -->
        <StackPanel DockPanel.Dock="Bottom">
            <TextBlock Text="{Binding ErrorMessage}"
                       HorizontalAlignment="Center" Foreground="Red" FontSize="18" />
            <Button Content="LOGIN" Background="DarkGreen"
                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center"
                    Margin="0, 10, 0, 0" Height="50" FontSize="18"
                    Command="{Binding LoginCommand}"
            />
    </DockPanel>
</UserControl>
